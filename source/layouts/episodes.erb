<% wrap_layout :layout do %>
  <div class="page">
    <header>
      <%= partial "partials/header" %>
    </header>
    <div class="content">
      <h1><%= current_page.title %></h1>
      <h3>Listen</h3>
      <audio src="<%= podcast_file_url(current_page.data.audio_file_name) %>" preload="auto" width="100%"></audio>
      <h3>Show Notes</h3>
      <div class="pub-date">
        Episode <%= current_page.data.id %>
      </div>
      <div class="pub-date">
        <%= current_page.date.strftime("%A, %B %w, %Y") %>
      </div>
      <article>
        <%= current_page.body %>
      </article>
    </div>
    <footer>
      <%= partial "partials/footer" %>
    </footer>
  </div><!-- /page -->
<% end %>


