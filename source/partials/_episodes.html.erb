<h2>Episodes</h2>
<% blog.articles.each_with_index do |article, index| %>
  <h3
    data-id="<%= article.data.id %>"
    data-file-src="<%= cdn_file_url(article.data.audio_file_name) %>">
    <%= article.title %>
  </h3>
  <div
    class="episode-body"
    data-id="<%= article.data.id %>"
  >
    <div class="pub-date">
      <span class="label">Published:</span> <%= article.date.strftime("%A, %B %e, %Y") %>
    </div>
    <div class="duration">
      <span class="label">Duration:</span> <%= article.data.duration %>
    </div>
    <div class="file-size">
      <span class="label">File Size:</span> <%= article.data.file_size_bytes/1000000 %> MB
    </div>
    <ul class="links">
      <li>
        <a href="#listen" class="listen">
          <%= image_tag("headphones_icon.svg", width: "20", height: "20", alt: "Headphones Icon", title: "Listen to the podcast") %>
          Listen
        </a>
      </li>
      <li>
        <a href="<%= cdn_file_url(article.data.audio_file_name) %>" class="webpage" download>
          <%= image_tag("download_icon.svg", width: "20", height: "20", alt: "Download Icon", title: "Download the Episode") %>
          Download
        </a>
      </li>
      <li>
        <a href="<%= article.url %>" class="webpage">
          <%= image_tag("webpage_icon.svg", width: "20", height: "20", alt: "Website Icon", title: "View the Episode Page") %>
          Show Notes / Transcript
        </a>
      </li>
    </ul>
    <div class="episode-content">
      <%= article.summary %>
    </div>
  </div>
<% end %>
