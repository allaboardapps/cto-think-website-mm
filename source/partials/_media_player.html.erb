<% article = blog.articles.first %>

<a id="listen"></a>
<h2>Listen</h2>
<h3><a href="<%= article.url %>" class="webpage"><%= "Episode #{article.data.id}: #{article.title}" %></a></h3>
  <div class="pub-date">
    <span class="label">Published:</span>&nbsp;
    <%= article.date.strftime("%A, %B %e, %Y") %>
  </div>
<div class="summary"><%= article.summary %></div>
<iframe title="SoundCloud audio player" width="100%" height="130" scrolling="no" frameborder="no" allow="autoplay" src="https://w.soundcloud.com/player/?url=https%3A//api.soundcloud.com/tracks/<%= article.data.soundcloud_id %>&amp;color=%23af0724&amp;auto_play=false&amp;hide_related=false&amp;show_comments=false&amp;show_user=false&amp;show_reposts=false&amp;show_teaser=true"></iframe>
